<head>
  <%= javascript_include_tag 'initial_search.js' %>
</head>

<body class='home-background'>
	<div class="home-banner">
		<img src="/assets/kargod_logo.png" class="logo">
	</div>
	<div class="container-fluid" align="center">
		<div class="home-catch">
			Find your dream car.
		</div>
		<div class="search-forms">
			<% makes_array = Make.all.map{ |m| [m.name, m.id, {:class => 'pick_make'}] } %>
		    <%= select_tag(:make_id, options_for_select(makes_array, ['Select Make']), {:class => 'pick_make'}) %>
		    <% models_array = Model.all.uniq{|m| m.name}.map{ |m| [m.name, m.id, {:class => 'pick_model'}] } %>
		    <%= select_tag(:model_id, options_for_select(models_array, {:class => 'pick_model'})) %>
		    <br>
		    <% start_year_array = [[1990, 1990],[1991, 1991],[1992, 1992],[1993, 1993],[1994, 1994],[1995, 1995],[1996, 1996],[1997, 1997],[1998, 1998],[1999, 1999],[2000, 2000],[2001, 2001],[2002, 2002],[2003, 2003],[2004, 2004],[2005, 2005],[2006, 2006],[2007, 2007],[2008, 2008],[2009, 2009],[2010, 2010],[2011, 2011],[2012, 2012],[2013, 2013 ]] %>
		    <%= select_tag(:start_year, options_for_select(start_year_array, [2013,2013]), {:class => 'select-date'}) %>
		    <% end_year_array = [[1990, 1990],[1991, 1991],[1992, 1992],[1993, 1993],[1994, 1994],[1995, 1995],[1996, 1996],[1997, 1997],[1998, 1998],[1999, 1999],[2000, 2000],[2001, 2001],[2002, 2002],[2003, 2003],[2004, 2004],[2005, 2005],[2006, 2006],[2007, 2007],[2008, 2008],[2009, 2009],[2010, 2010],[2011, 2011],[2012, 2012],[2013, 2013 ]] %>
		    <%= select_tag(:end_year, options_for_select(end_year_array, [2013,2013]), {:class => 'select-date', :style => 'margin-left: 0px'}) %>
		    <% trim_array = [['Select Trim'],['328i', '328i'],['328i xDrive', '328i xDrive'],['335d', '335d'],['335i', '335i'],['335i xDrive', '335i xDrive']] %>
		    <%= select_tag(:trim_id, options_for_select(trim_array)) %>
		</div>
		<div class="submit-search">
			Let's Go!
		</div>
	</div>
  <script>
    $(document).ready(function() {
      $('#model_id').html("<option value=''>Select Model</option>");
      $('.submit-search').click(function(){
      	window.location = '/user_app';
      });
    });
  </script>
		</div>
	</div>
</body>